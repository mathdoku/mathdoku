<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- Layout for 7 inch tablets or bigger. -->
    <string name="dimension">sw600dp</string>

    <!-- This file should NOT be translated or altered per language. -->
    <!-- Values can and should be overwritten for specific screen sizes if necessary. -->


    <!-- GENERAL - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -->


    <!-- The text size used for giant text (e.g. solved message). -->
    <dimen name="text_size_giant">96dp</dimen>

    <!-- The text size used for heading text. -->
    <dimen name="text_size_heading">32sp</dimen>

    <!-- The text size used for default text. -->
    <dimen name="text_size_default">24sp</dimen>

    <!-- CONTROLS AND SUB ELEMENTS  - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -->


    <!-- The text size used for text on non-digit buttons. -->
    <dimen name="controls_text_size_default">30sp</dimen>

    <!-- DIALOGS  - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -->


    <!-- The text size used for title text at level 1. -->
    <dimen name="dialog_text_size_heading1">28sp</dimen>

    <!-- The text size used for title text at level 2. -->
    <dimen name="dialog_text_size_heading2">20sp</dimen>

    <!-- The text size used for body text. -->
    <dimen name="dialog_text_size_body">16sp</dimen>

    <!-- TICKER TAPE  - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -->


    <!-- The height of the ticker tape. -->
    <dimen name="ticker_tape_height">36dp</dimen>

    <!-- The text size to be used for text inside the ticker tape. Use dp as the height of the ticker tape is fixed. -->
    <dimen name="ticker_tape_text_size">24dp</dimen>

</resources>