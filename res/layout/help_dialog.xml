<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="15dp" >

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:text="@string/dialog_help_leadin"
            android:textColor="#ffffff"
            android:textSize="@dimen/dialog_text_size_body" />

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:paddingTop="15dp"
            android:text="@string/dialog_help_help_title"
            android:textColor="#ffffff"
            android:textSize="@dimen/dialog_text_size_heading1"
            android:textStyle="bold" />

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:paddingTop="15dp"
            android:text="@string/dialog_help_goal_title"
            android:textColor="#ffffff"
            android:textSize="@dimen/dialog_text_size_heading2"
            android:textStyle="bold" />

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="@string/dialog_help_goal_body"
            android:textColor="#ffffff"
            android:textSize="@dimen/dialog_text_size_body" />

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:paddingTop="15dp"
            android:text="@string/dialog_help_how_to_play_title"
            android:textColor="#ffffff"
            android:textSize="@dimen/dialog_text_size_heading2"
            android:textStyle="bold" />

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="@string/dialog_help_how_to_play_body"
            android:textColor="#ffffff"
            android:textSize="@dimen/dialog_text_size_body" />

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:paddingTop="15dp"
            android:text="@string/dialog_help_version_title"
            android:textColor="#ffffff"
            android:textSize="@dimen/dialog_text_size_heading1"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/dialog_help_version_body"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:textColor="#ffffff"
            android:textSize="@dimen/dialog_text_size_body" />

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:paddingTop="15dp"
            android:text="@string/dialog_help_license_title"
            android:textColor="#ffffff"
            android:textSize="@dimen/dialog_text_size_heading1"
            android:textStyle="bold" />

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="GNU General Public License version 3"
            android:textColor="#ffffff"
            android:textSize="@dimen/dialog_text_size_body"
            tools:ignore="HardcodedText" />

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:autoLink="web"
            android:text="http://www.gnu.org/licenses/gpl.html"
            android:textColorLink="#ffffff"
            android:textSize="@dimen/dialog_text_size_body"
            tools:ignore="HardcodedText" />

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:paddingTop="15dp"
            android:text="@string/dialog_help_project_home_title"
            android:textColor="#ffffff"
            android:textSize="@dimen/dialog_text_size_heading1"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/help_project_home_link"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:autoLink="web"
            android:textColorLink="#ffffff"
            android:textSize="@dimen/dialog_text_size_body" />

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:paddingTop="15dp"
            android:text="@string/dialog_help_contributors_title"
            android:textColor="#ffffff"
            android:textSize="@dimen/dialog_text_size_heading1"
            android:textStyle="bold" />

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="@string/dialog_help_contributors_body"
            android:textColor="#ffffff"
            android:textSize="@dimen/dialog_text_size_body" />
    </LinearLayout>

</ScrollView>