<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/gameFileListRow"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/background1"
    android:padding="15dp" >

    <RelativeLayout
        android:id="@+id/previewLayout"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:background="#FFFFFFFF" >

        <ImageView
            android:id="@+id/previewGameFile"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            tools:ignore="ContentDescription" />

        <TextView
            android:id="@+id/previewGameFileNotAvailable"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerInParent="true"
            android:layout_margin="15dp"
            android:text="@string/game_file_preview_not_available"
            android:visibility="gone" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/detailsLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/previewLayout"
        android:layout_marginLeft="15dp"
        android:layout_toRightOf="@+id/previewLayout" >

        <TextView
            android:id="@+id/filename"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginBottom="5dp"
            android:background="#80000000"
            android:text="Filename"
            android:textColor="#FFFFFFFF"
            android:textSize="12sp"
            android:visibility="gone"
            tools:ignore="HardcodedText" />

        <TextView
            android:id="@+id/savedOnText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/filename"
            android:layout_alignWithParentIfMissing="true"
            android:layout_below="@+id/filename"
            android:background="#80000000"
            android:text="MMM, 99 9999 HH:MM AM"
            android:textColor="#FFFFFFFF"
            android:textSize="12sp"
            tools:ignore="HardcodedText" />
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/buttonLayout"
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/previewLayout"
        android:layout_marginLeft="15dp"
        android:layout_toRightOf="@+id/previewLayout">

        <Button
            android:id="@+id/gameLoad"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:lines="1"
            android:text="@string/save_game_screen_load_game" />

        <Button
            android:id="@+id/gameDelete"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:lines="1"
            android:text="@string/save_game_screen_delete_game" />

    </LinearLayout>

</RelativeLayout>