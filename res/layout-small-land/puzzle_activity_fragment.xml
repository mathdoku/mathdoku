<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/topLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <RelativeLayout
        android:id="@+id/puzzleGrid"
        android:layout_width="wrap_content"
        android:layout_height="fill_parent"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginBottom="5dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="0dp"
        android:layout_marginTop="5dp"
        android:background="#00000000"
        android:visibility="gone" >

        <net.cactii.mathdoku.ui.GridView
            android:id="@+id/gridView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_centerVertical="true" />

        <TextView
            android:id="@+id/solvedText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#D0DECA1E"
            android:text="@string/main_ui_solved_messsage"
            android:textColor="#FF000000"
            android:textSize="@dimen/text_size_giant"
            android:visibility="gone" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_alignParentTop="true"
        android:layout_margin="5dp"
        android:layout_toRightOf="@+id/puzzleGrid" >

        <TextView
            android:id="@+id/timerText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:background="#00000000"
            android:lines="1"
            android:text="99h99m99s"
            android:textColor="#FF000000"
            android:textSize="@dimen/text_size_default"
            android:textStyle="bold"
            android:visibility="gone"
            tools:ignore="HardcodedText" />

        <TableLayout
            android:id="@+id/controls"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_above="@+id/gameSeedLabel"
            android:layout_alignParentLeft="true"
            android:layout_below="@+id/timerText"
            android:layout_marginRight="5dp"
            android:visibility="gone"
            android:weightSum="5" >

            <TableRow
                android:id="@+id/controlsHeadersRow"
                android:layout_weight="1"
                android:gravity="center_horizontal" >

                <!-- Keep all properties that control height for elements timerText and inputModeText in line with each other. -->
                <!-- Note: the weight of element inputModeText will be set programmatically to the number of digit columns used. -->
                <!-- Note: textSize is not set explicitly for small screens. Let android determin optimal size. -->

                <Button
                    android:id="@+id/inputModeText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:lines="1"
                    android:text="@string/input_mode_normal_long"
                    android:textStyle="bold" />
            </TableRow>

            <TableRow
                android:id="@+id/controlsButtonRow1"
                android:layout_weight="1" >

                <Button
                    android:id="@+id/digitPosition1"
                    android:layout_width="0dp"
                    android:layout_height="fill_parent"
                    android:layout_weight="1"
                    android:textStyle="bold"
                    tools:ignore="ButtonStyle" />

                <Button
                    android:id="@+id/digitPosition2"
                    android:layout_width="0dp"
                    android:layout_height="fill_parent"
                    android:layout_weight="1"
                    android:textStyle="bold"
                    tools:ignore="ButtonStyle" />

                <Button
                    android:id="@+id/digitPosition3"
                    android:layout_width="0dp"
                    android:layout_height="fill_parent"
                    android:layout_weight="1"
                    android:textStyle="bold"
                    tools:ignore="ButtonStyle" />
            </TableRow>

            <TableRow
                android:id="@+id/controlsButtonRow2"
                android:layout_weight="1" >

                <Button
                    android:id="@+id/digitPosition4"
                    android:layout_width="0dp"
                    android:layout_height="fill_parent"
                    android:layout_weight="1"
                    android:textStyle="bold"
                    tools:ignore="ButtonStyle" />

                <Button
                    android:id="@+id/digitPosition5"
                    android:layout_width="0dp"
                    android:layout_height="fill_parent"
                    android:layout_weight="1"
                    android:textStyle="bold"
                    tools:ignore="ButtonStyle" />

                <Button
                    android:id="@+id/digitPosition6"
                    android:layout_width="0dp"
                    android:layout_height="fill_parent"
                    android:layout_weight="1"
                    android:textStyle="bold"
                    tools:ignore="ButtonStyle" />
            </TableRow>

            <!-- The last row is an optional row which might be binnen in case not playing gridsize 7 or above. In case a button is added on the right the logic of hiding this row has to be revised! -->

            <TableRow
                android:id="@+id/controlsButtonRow3"
                android:layout_weight="1" >

                <Button
                    android:id="@+id/digitPosition7"
                    android:layout_width="0dp"
                    android:layout_height="fill_parent"
                    android:layout_weight="1"
                    android:textStyle="bold"
                    tools:ignore="ButtonStyle" />

                <Button
                    android:id="@+id/digitPosition8"
                    android:layout_width="0dp"
                    android:layout_height="fill_parent"
                    android:layout_weight="1"
                    android:textStyle="bold"
                    tools:ignore="ButtonStyle" />

                <Button
                    android:id="@+id/digitPosition9"
                    android:layout_width="0dp"
                    android:layout_height="fill_parent"
                    android:layout_weight="1"
                    android:textStyle="bold"
                    tools:ignore="ButtonStyle" />
            </TableRow>

            <TableRow
                android:id="@+id/controlsButtonRow4"
                android:layout_marginTop="10dp"
                android:layout_weight="1" >

                <Button
                    android:id="@+id/clearButton"
                    android:layout_width="0dp"
                    android:layout_height="fill_parent"
                    android:layout_weight="1.5"
                    android:lines="1"
                    android:text="@string/main_ui_clear"
                    android:textStyle="bold"
                    tools:ignore="ButtonStyle" />
            </TableRow>

            <TableRow
                android:id="@+id/controlsButtonRow5"
                android:layout_weight="1" >

                <Button
                    android:id="@+id/undoButton"
                    android:layout_width="0dp"
                    android:layout_height="fill_parent"
                    android:layout_weight="1.5"
                    android:lines="1"
                    android:text="@string/main_ui_undo"
                    android:textStyle="bold"
                    tools:ignore="ButtonStyle" />
            </TableRow>
        </TableLayout>

        <TextView
            android:id="@+id/gameSeedLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/gameSeedText"
            android:layout_alignLeft="@+id/gameSeedText"
            android:background="#00000000"
            android:text="@string/game_seed"
            android:textColor="#FF000000"
            android:textSize="@dimen/text_size_tiny"
            android:visibility="gone" />

        <TextView
            android:id="@+id/gameSeedText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:background="#00000000"
            android:text="999.999.999.999.999.999"
            android:textColor="#FF000000"
            android:textSize="@dimen/text_size_tiny"
            android:visibility="gone"
            tools:ignore="HardcodedText" />

    </RelativeLayout>

</RelativeLayout>