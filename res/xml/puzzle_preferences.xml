<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android" >

    <PreferenceCategory
        android:key="Assistance"
        android:title="@string/options_group_assistance" >
        <CheckBoxPreference
            android:key="badmaths"
            android:summary="@string/option_mark_bad_maths_summary"
            android:title="@string/option_mark_bad_maths_title" />
        <CheckBoxPreference
            android:key="dupedigits"
            android:summary="@string/option_mark_duplicates_summary"
            android:title="@string/option_mark_duplicates_title" />
        <CheckBoxPreference
            android:key="redundantPossibles"
            android:summary="@string/option_clear_redundant_possibles_summary"
            android:title="@string/option_clear_redundant_possibles_title" />
    </PreferenceCategory>
    <PreferenceCategory
        android:key="Puzzle Generation"
        android:title="@string/options_group_puzzle" >
        <CheckBoxPreference
            android:key="AllowBigCages"
            android:summary="@string/option_generate_big_cages_summary"
            android:title="@string/option_generate_big_cages_title" />
        <ListPreference
            android:entries="@array/hideOpTexts"
            android:entryValues="@array/hideOpValues"
            android:key="hideoperatorsigns"
            android:title="@string/option_hide_operators_title" />
    </PreferenceCategory>
    <PreferenceCategory
        android:key="Display"
        android:title="@string/options_group_display" >
        <ListPreference
            android:entries="@array/themeTexts"
            android:entryValues="@array/themeValues"
            android:key="theme"
            android:title="@string/option_theme_title" />

        <CheckBoxPreference
            android:key="maybe3x3"
            android:summary="@string/option_maybe_layout_summary"
            android:title="@string/option_maybe_layout_title" />
        <CheckBoxPreference
            android:key="hideselector"
            android:summary="@string/option_hide_selector_summary"
            android:title="@string/option_hide_selector_title" />
        <CheckBoxPreference
            android:key="wakelock"
            android:summary="@string/option_wake_lock_summary"
            android:title="@string/option_wake_lock_title" />
        <CheckBoxPreference
            android:key="timer"
            android:summary="@string/option_show_timer_summary"
            android:title="@string/option_show_timer_title" />
    </PreferenceCategory>
    <PreferenceCategory
        android:key="Sound"
        android:title="@string/options_group_sound" >
        <CheckBoxPreference
            android:key="soundeffects"
            android:summary="@string/option_sound_effects_summary"
            android:title="@string/option_sound_effects_title" />
    </PreferenceCategory>

</PreferenceScreen>