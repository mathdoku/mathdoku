<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android" >

    <PreferenceCategory android:title="@string/puzzle_setting_group_assistance" >
        <CheckBoxPreference
            android:key="puzzle_setting_bad_cage_math_visible"
            android:summary="@string/puzzle_setting_bad_cage_math_visible_summary"
            android:title="@string/puzzle_setting_bad_cage_math_visible_title" />
        <CheckBoxPreference
            android:key="puzzle_setting_duplicate_digits_visible"
            android:summary="@string/puzzle_setting_duplicate_digits_visible_summary"
            android:title="@string/puzzle_setting_duplicate_digits_visible_title" />
        <CheckBoxPreference
            android:key="puzzle_setting_clear_maybes"
            android:summary="@string/puzzle_setting_clear_maybes_summary"
            android:title="@string/puzzle_setting_clear_maybes_title" />
    </PreferenceCategory>
    <PreferenceCategory android:title="@string/puzzle_setting_group_display" >
        <ListPreference
            android:entries="@array/puzzle_setting_theme_values_text"
            android:entryValues="@array/puzzle_setting_theme_values_code"
            android:key="puzzle_setting_theme"
            android:title="@string/puzzle_setting_theme_title" />
        <!-- Entries, entry values and summary for preference puzzle_setting_outer_swipe_circle will be set programmatically. -->
        <ListPreference
            android:key="puzzle_setting_outer_swipe_circle"
            android:title="@string/puzzle_setting_outer_swipe_circle_title" />
		<CheckBoxPreference
		    android:key="puzzle_setting_digit_buttons"
		    android:summary="@string/puzzle_setting_digit_buttons_summary"
		    android:title="@string/puzzle_setting_digit_buttons_title"/>
        <CheckBoxPreference
            android:key="puzzle_setting_colored_digits"
            android:summary="@string/puzzle_setting_colored_digits_summary"
            android:title="@string/puzzle_setting_colored_digits_title" />
        <CheckBoxPreference
            android:key="puzzle_setting_maybes_displayed_in_grid"
            android:summary="@string/puzzle_setting_maybes_displayed_in_grid_summary"
            android:title="@string/puzzle_setting_maybes_displayed_in_grid_title" />
        <CheckBoxPreference
            android:key="puzzle_setting_timer_visible"
            android:summary="@string/puzzle_setting_timer_visible_summary"
            android:title="@string/puzzle_setting_timer_visible_title" />
        <CheckBoxPreference
            android:key="puzzle_setting_full_screen"
            android:summary="@string/puzzle_setting_full_screen_summary"
            android:title="@string/puzzle_setting_full_screen_title" />
        <CheckBoxPreference
            android:key="puzzle_setting_wake_lock"
            android:summary="@string/puzzle_setting_wake_lock_summary"
            android:title="@string/puzzle_setting_wake_lock_title" />
    </PreferenceCategory>
    <PreferenceCategory
        android:key="Sound"
        android:title="@string/puzzle_setting_group_sound" >
        <CheckBoxPreference
            android:key="puzzle_setting_sound_effects"
            android:summary="@string/puzzle_setting_sound_effects_summary"
            android:title="@string/puzzle_setting_sound_effects_title" />
    </PreferenceCategory>

</PreferenceScreen>