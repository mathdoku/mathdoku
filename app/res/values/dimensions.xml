<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- Default dimensions for layout. For tablets, see values-sw600dp. -->
    <string name="dimension" translatable="false">default</string>

    <!-- This file should NOT be translated or altered per language. -->
    <!-- Values can and should be overwritten for specific screen sizes if necessary. -->


    <!-- GENERAL - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -->


    <!-- The text size used for giant text (e.g. solved message). -->
    <dimen name="text_size_giant">48sp</dimen>

    <!-- The text size used for heading text. -->
    <dimen name="text_size_heading">20sp</dimen>

    <!-- The text size used for default text. -->
    <dimen name="text_size_default">16sp</dimen>

    <!-- CONTROLS AND SUB ELEMENTS  - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -->


    <!-- The text size used for text on buttons. This size is also the base size for the other -->
    <!-- dimension used for the controls. -->
    <dimen name="controls_text_size_default">23sp</dimen>

    <!-- Minimum height of buttons used for digit, clear and undo. -->
    <!-- controls_pad_min_height_buttons = controls_text_size_default * 3 / 2. This meets the android -->
    <!-- in which 1/6 of height is reserved for top margin, 4/6 used for content and 1/6 for -->
    <!-- the bottom margin. -->
    <dimen name="controls_pad_min_height_buttons">34dp</dimen>

    <!-- Margin between buttons -->
    <!-- controls_pad_margin_buttons = controls_text_size_default / 20 -->
    <dimen name="controls_pad_margin_buttons">1dp</dimen>

    <!-- DIALOGS  - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -->


    <!-- The text size used for title text at level 1. -->
    <dimen name="dialog_text_size_heading1">20sp</dimen>

    <!-- The text size used for title text at level 2. -->
    <dimen name="dialog_text_size_heading2">18sp</dimen>

    <!-- The text size used for body text. -->
    <dimen name="dialog_text_size_body">16sp</dimen>

    <!-- LEADERBOARD - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -->


    <!-- The text size used for the score on the leaderboard overview -->
    <dimen name="text_size_leaderboard_big">40sp</dimen>

</resources>