<?xml version="1.0" encoding="utf-8"?>
<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:tools="http://schemas.android.com/tools"
             android:id="@+id/dialog_top_score_layout"
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             android:layout_marginBottom="20dp"
             android:background="#33B5E5"
             android:padding="10dp"
             android:weightSum="5">

    <TableRow android:layout_weight="1">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:visibility="invisible"/>

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="5"
            android:gravity="center_horizontal"
            android:lines="1"
            android:text="@string/dialog_top_score_label"
            android:textColor="#000000"
            android:textSize="@dimen/dialog_text_size_heading1"/>
    </TableRow>

    <TableRow android:layout_weight="3">

        <ImageView
            android:id="@+id/dialog_top_score_leaderboard_icon"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:scaleType="fitCenter"
            tools:ignore="ContentDescription"/>

        <TextView
            android:id="@+id/dialog_top_score_score"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="5"
            android:gravity="center_horizontal"
            android:lines="1"
            android:textColor="#000000"
            android:textSize="60sp"/>
    </TableRow>

    <TableRow android:layout_weight="1">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:visibility="invisible"/>

        <TextView
            android:id="@+id/dialog_top_score_rank"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="5"
            android:gravity="center_horizontal"
            android:lines="1"
            android:textColor="#000000"
            android:textSize="@dimen/dialog_text_size_heading1"/>
    </TableRow>

</TableLayout>